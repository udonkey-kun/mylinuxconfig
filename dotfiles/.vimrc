" enable syntax highlighting
syntax on

" Theme
colorscheme desert

" Enable filetype detection for plugins and indentation options
filetype plugin indent on

" Reload file when changed on the outside
set autoread

" Write file when buffer change
set autowrite

" auto encode utf-8
set encoding=utf-8

" Number of lines to start scrolling at the top or bottom
set scrolloff=5

" Show current mode
set showmode

" Show command being executed
set showcmd

" Show line number
set number

" Always show status line
set laststatus=2

" Enhance cmd line completion
set wildmenu

" Show bracket linked
set showmatch

" Enable line wrapping
set wrap

" Highlight current line
set cursorline

" ignore case on search
set ignorecase

" ignore case unless there is an uppercase in the pattern
set smartcase

" Move cursor to the matched string
set incsearch

" When tabbing manually, use shiftwidth
set smarttab

" Set basic indenting
set autoindent
